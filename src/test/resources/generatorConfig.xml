<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <properties resource="jdbc.properties"/>

    <context id="DB2Tables" targetRuntime="MyBatis3">

        <!-- 运行环境配置 -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>

        <!-- 阻止生成注释 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- 配置数据库连接 -->
        <jdbcConnection driverClass="${jdbc.driverClass}"
                        connectionURL="${jdbc.jdbcUrl}"
                        userId="${jdbc.user}"
                        password="${jdbc.password}"/>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 制定JavaBean的生成目录 -->
        <javaModelGenerator targetPackage="com.billbook.bean"
                            targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- 制定sql映射文件生成的位置 -->
        <sqlMapGenerator targetPackage="com.billbook.dao" targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 制定DAO接口生成的位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.billbook.dao" targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!-- 指定每个表的生成策略 -->
<!--        <table tableName="bb_bill" domainObjectName="BBill"/>-->
        <!--<table tableName="bb_type" domainObjectName="BType"/>-->
        <table tableName="bb_user" domainObjectName="BUser"/>
    </context>
</generatorConfiguration>